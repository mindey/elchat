{
 "manifest_version": 2,
 "name": "Earthlang Chat Fonts",
 "version": "1.0",
 "description": "Extension to render chat in EarthLang font.",
 "short_name": "Earthlang Chat",
 "permissions": ["https://webchat.freenode.net/*"],
 "web_accessible_resources": ["fonts/*.*"],
 "content_scripts": [
   {
     "matches": ["https://webchat.freenode.net/*"],
     "css": ["background.css"]
   }
 ],
 "browser_action": {
   "default_title": "Earthlang Settings",
   "default_popup": "popup.html",
   "default_icon": {
     "16": "images/earthlang16.png",
     "32": "images/earthlang48.png",
     "128": "images/earthlang128.png"
   }
 }
}
